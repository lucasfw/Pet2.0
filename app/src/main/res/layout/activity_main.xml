<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lucascarvalho.adopet.MainActivity">

    <Button
        android:id="@+id/btnImg1"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img1"
        android:text="Imagem 1"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnImg4"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Imagem 1"
        android:textSize="10sp"
        android:layout_above="@+id/btnAdicionar"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnImg3"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Imagem 1"
        android:textSize="10sp"
        android:layout_alignBaseline="@+id/btnImg4"
        android:layout_alignBottom="@+id/btnImg4"
        android:layout_toEndOf="@+id/edtDono" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignTop="@+id/img3"
        android:layout_alignStart="@+id/btnImg2" />

    <EditText
        android:id="@+id/edtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nome"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edtPorte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Porte"
        android:layout_below="@+id/edtNome"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="false"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignTop="@+id/img4"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnImg2"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Imagem 1"
        android:textSize="10sp"
        android:layout_below="@+id/img2"
        android:layout_toStartOf="@+id/img3"
        android:layout_marginEnd="13dp" />

    <Button
        android:id="@+id/btnAdicionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/btnListar"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnListar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listar"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnAdicionar" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_above="@+id/btnImg3"
        android:layout_alignStart="@+id/btnImg3" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_above="@+id/btnImg4"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/edtIdade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtPorte"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Idade" />

    <EditText
        android:id="@+id/edtDono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Dono"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/edtIdade"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edtSexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img1"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Sexo" />

</RelativeLayout>
